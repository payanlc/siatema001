<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        body {
            background-color: #e5e5f7;
            opacity: 1;
            background-image:  radial-gradient(#444cf7 1.05px, transparent 1.05px), radial-gradient(#444cf7 1.05px, #e5e5f7 1.05px);
            background-size: 42px 42px;
            background-position: 0 0,21px 21px;
            font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
        }
    </style>

</head>

<body >
    <div class="container "> 

    <div class="card">
        <div class="card-header">
            Captura de clientes
        </div>
        <div class="card-body">
          <h5 class="card-title">Introducir los datos</h5>
          <form action="/inserta" method="POST">
            <div class="row  align-items-start ">
                <div class="col-2 bg-primary text-white">
                    <label for="nombre"> Nombre: </label>
                </div>
                <div class="col-4">
                    <input type="text" name="nombre" id="nombre" size="40" required>
                </div>
            </div>
            <div class="row ">
                <div class="col-2 bg-primary text-white">
                    <label for="nombre"> Direccion: </label>
                </div>
                <div class="col-4">
                    <input type="text" name="direccion" id="direccion" size="40" required>
                </div>
            </div>
            <div class="row ">
                <div class="col-2 bg-primary text-white">
                    <label for="nombre"> Telefono: </label>
                </div>
                <div class="col-4">
                    <input type="text" name="telefono" id="telefono" size="40" required>
                </div>
            </div>
            <div class="row ">
                <div class="col-2 bg-primary text-white">
                    <label for="nombre"> Estado: </label>
                </div>
                <div class="col-4">
                    <input type="text" name="estado" id="estado" size="3" required>
                </div>
            </div>
            <div class="row ">
                <div class="col-2 bg-primary text-white">
                    <label for="nombre"> Municipio: </label>
                </div>
                <div class="col-4">
                    <input type="text" name="municipio" id="municipio" size="20" required>
                </div>
            </div>
            <div class="row ">
                <div class="col-2 bg-primary text-white">
                    <label for="nombre"> Pago: </label>
                </div>
                <div class="col-4">
                    <input type="number" name="pago" id="pago" size="10" required>
                </div>
            </div>
            <!-- <div class="row ">
                <div class="col-2">
                    <label for="nombre"> Fecha de Salida: </label>
                </div>
                <div class="col-4">
                    <input type="datetime" name="fecha_salida" id="fecha_salida"  required>
                </div>
            </div> -->
            <div class="row">
                <div class="col-2">
                    <input type="submit" value="Enviar" class="btn btn-primary">
                </div>
            </div>
        </form>
          <!-- <p class="card-text">Captura de informacion.</p>
          <a href="#" class="btn btn-primary">Enviar</a> -->
        </div>
      </div>

 

      

    <hr>
    <div class="continer-fluid ">
        <table class="table bg-primary text-white">
            <thead>
                <th>ID</th>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Direcci√≥n</th>
                <th>Estado</th>
                <th>Municipio</th>
                <th>Pago</th>
                <th>Acciones</th>
            </thead>
            <tbody>
                <% clientes.forEach((cliente)=>{ %>
                    <tr>
                        <td>
                            <%= cliente.id %>
                        </td>
                        <td>
                            <%= cliente.nombre %>
                        </td>
                        <td>
                            <%= cliente.telefono %>
                        </td>
                        <td>
                            <%= cliente.direccion %>
                        </td>
                        <td>
                            <%= cliente.estado %>
                        </td>
                        <td>
                            <%= cliente.municipio %>
                        </td>
                        <td>
                            <%= cliente.pago %>
                        </td>
                        <!-- <td>
                            
                        </td> -->
                        <td>
                            <a href="/edita/<%= cliente.id %>" class="btn btn-outline-info">Editar</a>
                            <a href="/borra/<%= cliente.id %>" class="btn btn-outline-danger">Borrar</a>

                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>

    </div>
</body>
